<% layout("/layouts/boilerplate") %>
    <h3>All Listings</h3>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4">
        <% for (let listing of allListings) { %>
            <div class="col">
                <a href="/listings/<%= listing._id %>" class="listing-link text-decoration-none text-dark">
                    <div class="card h-100 listing-card">
                        <img src="<%= listing.image?.url || 'https://via.placeholder.com/300x200?text=No+Image' %>" class="card-img-top" alt="listing_image" style="height: 20rem; object-fit: cover;" />
                        <div class="card-body">
                            <p class="card-text">
                                <%= listing.title %><br> &#8377;
                                    <%= listing.price ? ` ${listing.price.toLocaleString("en-IN")}` : "Price not available" %> / night
                            </p>
                        </div>
                    </div>
                </a>
            </div>
            <% } %>
    </div>